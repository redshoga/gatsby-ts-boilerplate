// https://github.com/gatsbyjs/gatsby/blob/master/examples/using-typescript/tsconfig.json
{
  "include": ["./src/**/*", "./types"],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    // "allowJs": true,
    // "checkJs": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["node", "jest"]
  }
}
